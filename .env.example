# Server Configuration
NODE_ENV=development
PORT=8200
HOST=0.0.0.0

# Database
DATABASE_URL=sqlite:./server/data/database.sqlite
# For PostgreSQL: postgresql://user:password@localhost:5432/sonos_kids

# Sonos API
SONOS_API_HOST=127.0.0.1
SONOS_API_PORT=5005

# Spotify API
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Amazon Music (optional)
AMAZON_ACCESS_KEY=
AMAZON_SECRET_KEY=

# Apple Music (optional)
APPLE_DEVELOPER_TOKEN=
APPLE_TEAM_ID=

# TuneIn Radio (optional)
TUNEIN_API_KEY=
TUNEIN_PARTNER_ID=

# Security
JWT_SECRET=change-this-to-a-random-secret-key
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10
DEFAULT_PIN=1234

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./server/logs/app.log

# CORS
CORS_ORIGIN=http://localhost:8200
